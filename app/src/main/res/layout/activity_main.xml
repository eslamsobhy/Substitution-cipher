<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#1E90FF">

    <TextView
        android:text="Encryption &amp; Decryption Using Substitution Cipher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#B0E0E6"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="30sp"
        android:padding="30dp"
        />


    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="ENCRYPTION"
        android:background="#B0E0E6"
        android:textSize="20sp"
        android:textColor="#00008B"
        android:layout_gravity="center"
        android:layout_marginTop="75dp"
        android:onClick="actionBtn1"
        />

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="DECRYPTION"
        android:background="#B0E0E6"
        android:textSize="20sp"
        android:textColor="#00008B"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:onClick="actionBtn2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:background="#9932CC">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Substitution Table Customization: "
            android:textColor="#B0E0E6"
            android:textSize="25sp"
            android:layout_marginTop="50dp"
            />

        <Button
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="CUSTOMIZE"
            android:background="#B0E0E6"
            android:textSize="20sp"
            android:textColor="#00008B"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="30dp"
            android:onClick="actionBtn6"
            />

    </LinearLayout>

</LinearLayout>
